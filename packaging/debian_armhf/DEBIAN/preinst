#!/bin/sh

set -e

case "$1" in

  install|upgrade)
    if [ ! -f "/etc/init/vault.conf" ] ; then
      mkdir -p /etc/init
      touch /etc/init/vault.conf

      echo "VAULT_STORAGE=/data" > /etc/init/vault.conf
      echo "VAULT_LOG_LEVEL=INFO" >> /etc/init/vault.conf
      echo "VAULT_JOURNAL_SATURATION=200" >> /etc/init/vault.conf
      echo "VAULT_SNAPSHOT_SCANINTERVAL=120s" >> /etc/init/vault.conf
      echo "VAULT_METRICS_REFRESHRATE=1s" >> /etc/init/vault.conf
      echo "VAULT_METRICS_OUTPUT=/opt/vault/metrics/metrics.json" >> /etc/init/vault.conf
      echo "VAULT_HTTP_PORT=4400" >> /etc/init/vault.conf
      echo "VAULT_SECRETS=/opt/vault/secrets" >> /etc/init/vault.conf
      echo "VAULT_LAKE_HOSTNAME=localhost" >> /etc/init/vault.conf
      echo "VAULT_METRICS_REFRESHRATE=1s" >> /etc/init/vault.conf
      echo "VAULT_METRICS_OUTPUT=/opt/vault/metrics/metrics.json" >> /etc/init/vault.conf
    fi

    secrets=$(sed -n -e 's/^.*VAULT_SECRETS=//p' /etc/init/vault.conf 2>/dev/null | awk '{gsub(/^ +| +$/,"")} {print $0}')

    if [ -z "${secrets}" ] ; then
      (>&2 echo "VAULT_SECRETS are not defined at /etc/init/vault.conf")
      exit 1
    fi

    if [ ! -f "${secrets}/domain.local.crt" ] || [ ! -f "${secrets}/domain.local.key" ] ; then
      mkdir -p "${secrets}"

      openssl req \
        -x509 \
        -nodes \
        -newkey rsa:2048 \
        -keyout "${secrets}/domain.local.key" \
        -out "${secrets}/domain.local.crt" \
        -days 1 \
        -subj "/C=CZ/ST=Czechia/L=Prague/O=OpenBanking/OU=IT/CN=localhost/emailAddress=jan.cajthaml@gmail.com"
      echo "generated temporary certificates at ${secrets} valid for 24 hours"
    fi

  ;;

  abort-upgrade)
  ;;

  *)
    (>&2 echo "preinst called with unknown argument \`$1'")
    exit 1
  ;;

esac

exit 0
