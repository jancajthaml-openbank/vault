[Unit]
Description=openbank account vault REST service
PartOf=vault.service
After=vault.service
ConditionPathExists=/etc/init/vault.conf

[Service]
Type=notify
EnvironmentFile=/etc/init/vault.conf
StartLimitBurst=0
ExecStart=/usr/bin/vault-rest
StandardInput=null
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
Restart=always
RestartSec=0
TimeoutStartSec=0
TimeoutSec=infinity
KillMode=process

[Install]
WantedBy=multi-user.target
