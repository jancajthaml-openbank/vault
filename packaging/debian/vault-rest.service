[Unit]
Description=openbank account vault REST service
PartOf=vault.service
After=vault.service
ConditionPathExists=/etc/vault/conf.d/init.conf

[Service]
Type=notify
EnvironmentFile=/etc/vault/conf.d/init.conf
StartLimitBurst=0
ExecStart=/usr/bin/vault-rest
StandardInput=null
LimitNOFILE=1048576
LimitNPROC=infinity
LimitCORE=infinity
Restart=always
RestartSec=0
TimeoutStartSec=0
TimeoutSec=infinity
SuccessExitStatus=2
KillMode=process
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
